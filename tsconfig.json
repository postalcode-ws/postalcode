{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "mocha", "chai"],
    "noImplicitAny": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
